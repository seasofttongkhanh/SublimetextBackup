<snippet>
    <content><![CDATA[
/* Create new section */
\$wp_customize->add_section('${1:id_section}', array(
    'title' => __('Title ', 'html5blank'),
    'priority' => 35,
    'capability' => 'edit_theme_options',
    'description' => __('Description.', 'html5blank'),
) );

// new control
\$wp_customize->add_setting('${2:id_setting}', array(
    'default' => '',
    'type' => 'option',
    'capability' => 'edit_theme_options',
    'transport' => 'postMessage',
) );
\$wp_customize->add_control('stheme_logo_url', array(
    'label' => __('Logo Url', 'html5blank'),
    'section' => '${1:id_section}', // id section
    'settings' => '${2:id_setting}', // id setting
    'priority' => 10,
) );
// end control

/* End section */
// add_action('customize_register', 'function_callback');
    ]]></content>
    <tabTrigger>wp_add_customize_section</tabTrigger>
